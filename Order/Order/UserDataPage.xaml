<Page x:Name="UserDataPageChooser" x:Class="Order.UserDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Order"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1000"
      Title="UserDataPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="149*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="LabelUserDataPageInformation" Content="Podaj informacje do zamówienia" Margin="20,20,20,20" FontSize="24" Grid.ColumnSpan="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White"/>
        <Label x:Name="LabelUserDataPageName" Content="Imie:" Margin="20,20,20,20" FontSize="24" Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White"/>
        <Label x:Name="LabelUserDataPageSurname" Content="Nazwisko:" Margin="20,20,20,20" FontSize="24" Grid.Row="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White"/>
        <Label x:Name="LabelUserDataPageNumber" Content="Numer telefonu:" Margin="20,20,20,20" FontSize="24" Grid.Row="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White"/>
        <Label x:Name="LabelUserDataPageMail" Content="Mail:" Margin="20,20,20,20" FontSize="24" Grid.Row="4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White"/>
        <TextBox x:Name="TextBoxDataUserPageName" Margin="20,20,20,20" TextWrapping="Wrap" FontSize="24" Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" Background="#FF2728B0" />
        <TextBox x:Name="TextBoxDataUserPageSurname" Margin="20,20,20,20" TextWrapping="Wrap" FontSize="24" Grid.Column="1" Grid.Row="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" Background="#FF2728B0" />
        <TextBox x:Name="TextBoxDataUserPageNumber" Margin="20,20,20,20" TextWrapping="Wrap" FontSize="24" Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" Background="#FF2728B0" />
        <TextBox x:Name="TextBoxDataUserPageMail" Margin="20,20,20,20" TextWrapping="Wrap" FontSize="24" Grid.Row="4" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" Background="#FF2728B0" />
        <Label x:Name="LabelUserDataPageAdress" Content="Adres" Margin="20,20,20,20" FontSize="24" Grid.Row="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White"/>
        <TextBox x:Name="TextBoxDataUserPageAdress" Margin="20,20,20,20" TextWrapping="Wrap" FontSize="24" Grid.Row="5" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" Background="#FF2728B0" />

    </Grid>
</Page>
